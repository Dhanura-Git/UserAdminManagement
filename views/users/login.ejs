<%- include("../layouts/header.ejs")  %>



<section class="BlueBG">
    <div>
        <form action="/login" method="post" style="max-width: 480px; margin: auto;">
            <label for="email" class="text-danger" ><%=locals.Em%></label>                
            <input type="email" name="email" placeholder="Enter email" class="form-control">
            <br>
            <label for="password" class="text-danger" ><%=locals.Ps%></label>
            <input type="password" name="password" placeholder="Type your password" class="form-control">
            <%if(typeof message !=='undefined'){%>
                <p class="text-danger"><%=message%></p>
                <%}else{%>

                    <br>
                <%}%>
            <input type="submit" value="Login" class="btn btn-success">
        </form> 
        <br>
        

        <a href="/register">Register here</a>
        
        </div>
</section>



<%- include("../layouts/footer.ejs")  %>